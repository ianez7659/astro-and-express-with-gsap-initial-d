---
import Layout from "../layout/layout.astro";
import ResetForm from "../components/reset-form.astro";
import BackgroundContainer from "../components/common/background-container.astro";
---

<Layout title="Reset">
  <BackgroundContainer
    color="#97258F"
    imagePath="/bg-reset-2.png"
    classNameImage="right-5"
    styleNameImage="background-size: 85%;"
    bgLayerAnimType=""
    bgLayerAnimDelay=""
    bgLayerAnimDuration=""
    bgImageAnimType="slide-bottom-right"
    bgImageAnimDelay="0.2"
  >
    <ResetForm />
  </BackgroundContainer>
  <script type="module" src="/js/page-anim.js"></script>
</Layout>
