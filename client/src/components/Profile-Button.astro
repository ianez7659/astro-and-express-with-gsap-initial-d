---
export interface Props {
  type?: "button" | "submit" | "reset";
  text: string;
  className?: string;
}

const {
  type = "button",
  text,
  className = "",
} = Astro.props;
---
<button
  type={type}
  class={`w-[180px] md:w-[240px] mx-auto block border-[#ffffff] border-[2px] 
          bg-[#E20613] text-white py-2 
          font-bold text-[16px] md:text-display-3 rounded-[15px] 
          tracking-widest ${className}`}
>
  {text}
</button>